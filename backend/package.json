{
  "name": "benefits-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "tsx src/scripts/migrate.ts",
    "seed:demo": "tsx src/scripts/seed-demo.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "DB_PROVIDER=memory JWT_SECRET=test-jwt-secret-at-least-32-characters SEED_FULL_ADMIN_EMAIL=platform-admin@example.com SEED_FULL_ADMIN_PASSWORD=ChangeMe123! vitest run",
    "test:postgres": "DB_PROVIDER=postgres DB_AUTO_MIGRATE=true DB_REQUIRE_SCHEMA_CHECK=true JWT_SECRET=test-jwt-secret-at-least-32-characters SEED_FULL_ADMIN_EMAIL=platform-admin@example.com SEED_FULL_ADMIN_PASSWORD=ChangeMe123! vitest run tests/api.postgres.integration.test.ts",
    "test:watch": "DB_PROVIDER=memory JWT_SECRET=test-jwt-secret-at-least-32-characters SEED_FULL_ADMIN_EMAIL=platform-admin@example.com SEED_FULL_ADMIN_PASSWORD=ChangeMe123! vitest",
    "start:e2e": "tsx src/index.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.6",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^4.0.18"
  }
}
